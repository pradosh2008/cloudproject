. ${HOME}/lib/set_env.sh
. ${HOME}/lib/common.sh

#Unique Key CHECK

sql='
select count(*) cnt
from
    (select
    ID_CHAIN
    , ID_CUST
    , ID_EMAIL
    ,EXTRACT_TS
    from edl_stage.plus_vmci172_chain_cust_email
    group by 1,2,3,4
    having count(*)>1
)'


run_validation "$sql" "Unique Key Check"

#completeness check

sql='
SELECT
    count(*) cnt
from edl_landing.lbca_vmci172_chain_cust_email l
left join edl_stage.plus_vmci172_chain_cust_email p
    on CAST(TRIM(l.ID_CHAIN) AS INT64) = p.ID_CHAIN
    and CAST(TRIM(l.ID_CUST) AS INT64) = p.ID_CUST
    and CAST(TRIM(l.ID_EMAIL) AS INT64) = p.ID_EMAIL
where p.ID_EMAIL is null'

run_validation "$sql" "Completeness Check"


exit ${ERROR_CD:-0}
